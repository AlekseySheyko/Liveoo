<LinearLayout style="@style/MainContainer"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:paddingBottom="5dp"
              android:paddingLeft="@dimen/grid_horizontal_margin"
              android:paddingRight="@dimen/grid_horizontal_margin"
              android:paddingTop="@dimen/grid_vertical_margin"
              tools:context=".MainActivity">

    <FrameLayout
        style="@style/CategoryWrapper"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:onClick="openCategory">

        <!--TODO: Replace placeholders with real images-->
        <ImageView
            style="@style/CategoryImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/favourites"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/category_darkener"/>

        <!--TODO: Decrease heart icon size-->
        <TextView
            style="@style/CategoryTitle"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent"
            android:drawablePadding="9dp"
            android:drawableRight="@drawable/ic_favourite"
            android:text="My Favourites"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                style="@style/CategoryWrapper"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="2dp"
                android:onClick="openCategory">

                <ImageView
                    style="@style/CategoryImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/curated"/>

                <TextView
                    style="@style/CategoryTitle"
                    android:text="Curated"/>

            </FrameLayout>

            <FrameLayout
                style="@style/CategoryWrapper"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:onClick="openCategory">

                <ImageView
                    style="@style/CategoryImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/nightlife"/>

                <TextView
                    style="@style/CategoryTitle"
                    android:text="Performance and\nNightlife"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                style="@style/CategoryWrapper"
                android:layout_height="match_parent"
                android:onClick="openCategory">

                <ImageView
                    style="@style/CategoryImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/food"/>

                <TextView
                    style="@style/CategoryTitle"
                    android:text="Eat and Drink"/>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <FrameLayout
            style="@style/CategoryWrapper"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:onClick="openCategory">

            <ImageView
                style="@style/CategoryImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/get_healthy"/>

            <TextView
                style="@style/CategoryTitle"
                android:text="Get Healthy"/>

        </FrameLayout>

        <FrameLayout
            style="@style/CategoryWrapper"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:onClick="openCategory">

            <ImageView
                style="@style/CategoryImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/culture"/>

            <TextView
                style="@style/CategoryTitle"
                android:text="Culture"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>