<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="horizontal"
              android:paddingBottom="16dp"
              android:paddingLeft="19dp"
              android:paddingRight="19dp"
              android:paddingTop="16dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_ticket_1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            tools:text="Event Title"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            tools:text="123, Road Name, City"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_calendar_black"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_primary"
                android:textSize="11sp"
                tools:text="May 19th @ 7:30 pm"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/ic_location_black"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_primary"
                android:textSize="11sp"
                tools:text="City, Postcode"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>