<ScrollView
    style="@style/ScrollContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".TagsManageActivity">

    <LinearLayout
        style="@style/MainContainer"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="Pull down to load more"
            android:textColor="@color/text_primary"
            android:textSize="16sp"/>

        <LinearLayout
            style="@style/TagsContainer">

            <ToggleButton
                android:layout_marginRight="4dp"
                android:textOn="Latest Music"
                android:textOff="Latest Music"
                style="@style/TagToggle"/>

            <ToggleButton
                android:layout_marginLeft="4dp"
                android:textOn="Latest Movies"
                android:textOff="Latest Movies"
                style="@style/TagToggle"/>

        </LinearLayout>

        <LinearLayout
            style="@style/TagsContainer">

            <ToggleButton
                android:layout_marginRight="4dp"
                android:textOn="Blues"
                android:textOff="Blues"
                android:checked="true"
                style="@style/TagToggle"/>

            <ToggleButton
                android:layout_marginLeft="4dp"
                android:textOn="Racing"
                android:textOff="Racing"
                style="@style/TagToggle"/>

        </LinearLayout>

        <LinearLayout
            style="@style/TagsContainer">

            <ToggleButton
                android:layout_marginRight="4dp"
                android:textOn="Adaptation"
                android:textOff="Adaptation"
                style="@style/TagToggle"/>

            <ToggleButton
                android:layout_marginLeft="4dp"
                android:textOn="TV"
                android:textOff="TV"
                android:checked="true"
                style="@style/TagToggle"/>

        </LinearLayout>

        <LinearLayout
            style="@style/TagsContainer">

            <ToggleButton
                android:layout_marginRight="4dp"
                android:textOn="Gallery"
                android:textOff="Gallery"
                style="@style/TagToggle"/>

            <ToggleButton
                android:layout_marginLeft="4dp"
                android:textOn="Sessions"
                android:textOff="Sessions"
                style="@style/TagToggle"/>

        </LinearLayout>

        <LinearLayout
            style="@style/TagsContainer">

            <ToggleButton
                android:layout_marginRight="4dp"
                android:textOn="Adventure"
                android:textOff="Adventure"
                android:checked="true"
                style="@style/TagToggle"/>

            <ToggleButton
                android:layout_marginLeft="4dp"
                android:textOn="Bands"
                android:textOff="Bands"
                style="@style/TagToggle"/>

        </LinearLayout>

        <LinearLayout
            style="@style/TagsContainer">

            <ToggleButton
                android:layout_marginRight="4dp"
                android:textOn="Restaurants"
                android:textOff="Restaurants"
                style="@style/TagToggle"/>

            <ToggleButton
                android:layout_marginLeft="4dp"
                android:textOn="Dance"
                android:textOff="Dance"
                style="@style/TagToggle"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:layout_weight="1">

            <Button
                style="@style/ButtonPrimary"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:text="Continue"
                android:textAllCaps="false"/>

        </FrameLayout>

    </LinearLayout>

</ScrollView>