<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:background="@drawable/background_blurred_sample"
              tools:context=".LoginActivity">

    <TextView
        style="@style/FormHeader"
        android:text="Register"/>

    <EditText
        android:id="@+id/firstname_edittext"
        style="@style/InputField"
        android:drawableLeft="@drawable/ic_name"
        android:hint="First Name"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/lastname_edittext"
        style="@style/InputField"
        android:drawableLeft="@drawable/ic_name"
        android:hint="Last Name"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/email_edittext"
        style="@style/InputField"
        android:drawableLeft="@drawable/ic_email"
        android:hint="Email Address"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/password_edittext"
        style="@style/InputField"
        android:drawableLeft="@drawable/ic_password"
        android:hint="Password"
        android:inputType="textPassword"/>

    <Button
        android:onClick="login"
        android:text="@string/register"
        style="@style/ButtonPrimary"/>

    <TextView
        style="@style/TextLabel"
        android:text="Read Our Ts &amp; Cs and Privacy Policy"/>

    <TextView
        style="@style/TextLabel"
        android:text="Already have an Account?"/>

    <TextView
        style="@style/TextLabel"
        android:text="Or"
        android:textAllCaps="true"/>

    <!--TODO: Replace with real Facebook button-->
    <Button
        android:onClick="continueWithFacebook"
        android:text="Sign in with Facebook"
        style="@style/ButtonSecondary"
        android:textAllCaps="false"/>

    <TextView
        style="@style/TextLabel"
        android:text="@string/facebook_note"/>

</LinearLayout>
