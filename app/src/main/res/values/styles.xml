<resources>

    <!-- Base application theme. -->
    <style name="LiveooTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="LiveooTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="LiveooTheme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="FormElement">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="InputField" parent="FormElement">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">@drawable/input_field_selector</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColorHint">#d2ffffff</item>
    </style>

    <style name="ButtonPrimary" parent="FormElement">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/primary_button_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonSecondary" parent="ButtonPrimary">
        <item name="android:background">@drawable/secondary_button_selector</item>
    </style>

    <style name="TextLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FormHeader" parent="TextLabel">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CategoryImage">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="CategoryWrapper">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:onClick">openCategory</item>
    </style>

    <style name="CategoryTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">bottom|right</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
