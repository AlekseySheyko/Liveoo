<resources>

    <!-- Base application theme. -->
    <style name="LiveooTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="actionBarStyle">@style/LiveooActionBar</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back</item>
        <item name="actionBarSize">64dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
        <!--TODO: Change touch highlight to white-->
    </style>

    <style name="LiveooActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/action_bar_background</item>
        <item name="background">@color/action_bar_background</item>
        <item name="elevation">0dp</item>
        <!--TODO: Add left padding to action bar title-->
    </style>

    <style name="ActionButtonOverflow" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow_menu</item>
    </style>

    <style name="LiveooTheme.Fullscreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LiveooTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="LiveooTheme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="FormElement">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="InputField" parent="FormElement">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:background">@drawable/input_field_selector</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">22dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColorHint">#deffffff</item>
    </style>

    <style name="ButtonPrimary" parent="FormElement">
        <item name="android:minHeight">50dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/primary_button_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#e6ffffff</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ButtonSecondary" parent="ButtonPrimary">
        <item name="android:background">@drawable/secondary_button_selector</item>
    </style>

    <style name="ButtonUber" parent="ButtonPrimary">
        <item name="android:background">@drawable/uber_button_selector</item>
    </style>

    <style name="ButtonFacebook" parent="ButtonPrimary">
        <item name="android:background">@drawable/facebook_button_selector</item>
        <item name="android:onClick">continueWithFacebook</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BorderlessButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="FormHeader" parent="TextLabel">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">27sp</item>
    </style>

    <style name="CategoryImage">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="CategoryWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:onClick">openCategory</item>
    </style>

    <style name="CategoryTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">bottom|right</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/category_darkener</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BackgroundImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">@string/background_image_description</item>
        <item name="android:src">@drawable/background_blurred</item>
    </style>

    <style name="LoginContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="MainContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="CardTextBody">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#f3ffffff</item>
    </style>

    <style name="KeyValueContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">17dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="KeyValueText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ScrollContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="ClickableWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TagsContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="TagToggle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/tag_toggle_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/toggle_color</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ToggleSettings" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:background">@drawable/settings_toggle_selector</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>

    <style name="SettingsTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingsItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
